def build(bld):

    bld.CryEngineModule(

        # Settings
        target                  = 'CryAction',
        vs_filter               = 'CryEngine',
        copyright_org           = 'Amazon-CryTek',
        file_list               = ['cryaction.waf_files'],
        win_test_all_file_list  = ['cryaction_tests.waf_files'],
        darwin_test_all_file_list = ['cryaction_tests.waf_files'],
        platforms               = ['all'],
        configurations          = ['all'],
        defines                 = ['USE_CRY_NEW_AND_DELETE'],
        use                     = ['AzCore'],
        includes                = [bld.Path('Code/CryEngine/CryCommon')
                                  ],
    )

