import os

def build(bld):

    bld.BuilderPlugin(
        target             = 'SliceBuilder',
        vs_filter          = 'Tools/AssetProcessor/Builders',
        file_list          = ['slicebuilder.waf_files'],
        platforms          = ['win', 'darwin'],
        configurations     = ['all'],
        exclude_monolithic = True,
        disable_pch        = True,
        win_features       = ['crcfix'],
        features           = ['qt5'],
        test_all_use       = ['AzTestShared'],
        uselib             = ['QT5CORE',
                              'QT5GUI',
                              'QT5WIDGETS'],
        includes           = [bld.Path('Code/CryEngine/CryCommon'), '..'], #so that we can specify the module name of SliceBuilder in the include statements.
        test_all_file_list = ['slicebuilder_tests.waf_files'],
    )


