/* Style for pulse highlight widgets (outliner highlight, etc) */
OutlinerWidget QWidget[PulseHighlight="true"]
{
    background-color: @MenuItemSelectedColor;
}

OutlinerWidget QLineEdit
{
    background: #FFFFFFFF;
}

OutlinerVisibilityCheckBox
{
    border: 0px solid transparent;
    border-radius: 0px;
    spacing: 0px;
    padding: 0px;
    line-height: 0px;
    font-size: 0px;
    margin: 2px;
}

OutlinerVisibilityCheckBox::indicator:checked
, OutlinerVisibilityCheckBox::indicator:unchecked
, OutlinerVisibilityCheckBox::indicator:indeterminate
{
    width: 20px;
    height: 20px;
    image-position:center;

    border: 1px solid transparent;
    border-radius: 3px;
    image: none;
    spacing: 0px;
    padding: 0px;
    line-height: 0px;
    font-size: 0px;
    margin: 0px;
}

OutlinerVisibilityCheckBox::indicator:checked
{
    image: url(:/Icons/Eye_Open.tif);
}

OutlinerVisibilityCheckBox::indicator:unchecked
{
    image: url(:/Icons/Eye_Slash.tif);
}

OutlinerVisibilityCheckBox#bordered::indicator:checked
, OutlinerVisibilityCheckBox#bordered::indicator:unchecked
, OutlinerVisibilityCheckBox#bordered::indicator:indeterminate
{
    border: 1px solid rgb(240, 195, 45);
    border-radius: 3px;
}

