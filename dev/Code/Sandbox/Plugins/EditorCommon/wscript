def build(bld):

    bld.CryEditorCommon(
        # Settings
        target              = 'EditorCommon',
        vs_filter           = 'Sandbox',
        copyright_org       = 'Amazon-CryTek',
        file_list           = 'editorcommon.waf_files',
        platforms           = ['win', 'darwin'],
        configurations      = ['all'],
        exclude_monolithic  = True,
        client_only         = True,
        features            = ['qt5'],
        includes            = ['.',
                               bld.Path('Code/Sandbox/Editor'),
                               bld.Path('Code/Sandbox/Editor/Include'),
                               bld.Path('Code/CryEngine/CryCommon')],
        use                 = ['EditorCore', 'AzQtComponents'],
        uselib              = ['QTMAIN',
                               'QTANGLE',
                               'QT5CORE',
                               'QT5GUI',
                               'QT5QML',
                               'QT5QUICK',
                               'QT5WIDGETS'],
        export_includes     = [ "."],
        defines             = ['FORCE_STANDARD_ASSERT',
                               'EDITOR_COMMON_EXPORTS'],

        # Platform Specific
        darwin_enable_rtti = True,

        win_x64_clang_cxxflags = ['-Wno-enum-compare-switch'],

        # Testing
        test_all_file_list = ['editorcommon_test.waf_files'],
    )
