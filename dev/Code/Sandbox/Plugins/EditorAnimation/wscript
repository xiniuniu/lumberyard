def build(bld):

    bld.CryPlugin(

        # Settings
        target                  = 'EditorAnimation',
        vs_filter               = 'Sandbox/Plugins',
        copyright_org           = 'Amazon-CryTek',
        file_list               = 'editoranimation.waf_files',
        platforms               = ['win', 'darwin'],
        configurations          = ['all'],
        exclude_monolithic      = True,
        client_only             = True,
        features                = ['qt5'],
        includes                = ['.',
                                   bld.Path('Code/Sandbox/Editor'),
                                   bld.Path('Code/Sandbox/Editor/Include'),
                                   bld.Path('Code/CryEngine/CryCommon'),
                                   bld.Path('Code/Tools')],
        use                     = ['EditorCommon',
                                   'SceneCore'],
        uselib                  = ['QT5CORE',
                                   'QT5GUI',
                                   'QT5WIDGETS'],

        win_x64_clang_cxxflags  = ['-Wno-inconsistent-dllimport'],

        # Testing
        test_all_file_list      = ['editoranimation_test.waf_files'],
    )
