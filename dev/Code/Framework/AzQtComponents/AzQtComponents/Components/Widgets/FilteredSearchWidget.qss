AzQtComponents--FilteredSearchWidget QLineEdit
{
    qproperty-frame: true;
    width: 260px; /* This is just a reasonable default */
}

AzQtComponents--FilteredSearchWidget QPushButton
{
    background-color: transparent;
    border: none;
}

AzQtComponents--FilteredSearchWidget QPushButton#assetTypeSelector
{
    min-height: 16px;
    max-height: 16px;

    qproperty-icon: url(:/stylesheet/img/filter.svg);

    padding-right: 10px; /* To accomodate the ::menu-indicator */
}

AzQtComponents--FilteredSearchWidget QPushButton#assetTypeSelector::menu-indicator {
    image: url(:/stylesheet/img/indicator-arrow-down.svg);
    subcontrol-position: right center;
    subcontrol-origin: padding;
}

AzQtComponents--FilterCriteriaButton
{
    padding: 0px;
    border-radius: 2px;
    border: 1px solid #808080;
    background-color: rgb(46, 46, 46);
}

AzQtComponents--FilterCriteriaButton QPushButton
{
    qproperty-icon: url(:/stylesheet/img/close.svg);
    qproperty-iconSize: 14px 14px;
    background-color: transparent;
    max-height: 18px;
}

AzQtComponents--FilterCriteriaButton QLabel
{
    padding-left: 8px;
    padding-right: 8px;
    background-color: transparent;
}

AzQtComponents--SearchTypeSelector QTreeView
{
    selection-background-color: rgb(101, 101, 101);
    selection-color: #ffffff;

    border: none;
    outline-style: none;

    show-decoration-selected: 1;
}

AzQtComponents--SearchTypeSelector QTreeView::item
{
    height: 24px;
}

AzQtComponents--SearchTypeSelector QTreeView::branch:hover,
AzQtComponents--SearchTypeSelector QTreeView::item:hover
{
    background: rgb(90, 90, 90);
}







