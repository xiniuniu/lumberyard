AzQtComponents--TitleBar
{
    background-color: #111111;
    border: 1px solid #000000;
}

AzQtComponents--TitleBar[drawAsTabBar="true"]
{
    border: none;
}

AzQtComponents--TitleBar *
{
    background-color: transparent;
}

AzQtComponents--TitleBar #title
{
    font-family: "Amazon Ember";
    font-size: 18px;
    margin-left: 16px;
    margin-right: 16px;
}

AzQtComponents--TitleBar #buttons
{
    margin-right: 12px;
}

AzQtComponents--TitleBar[drawSimple="true"] #buttons
{
    margin-top: 4px;
    margin-right: 8px;
    margin-bottom: 2px;
}

AzQtComponents--DockBarButton
{
    border: none;
    background-color: transparent;
    min-width: 16px;
    max-width: 16px;
    min-height: 16px;
    max-height: 16px;
    qproperty-flat: "true";
    qproperty-iconSize: 12px 12px;
}

AzQtComponents--TitleBar[drawSimple="true"] AzQtComponents--DockBarButton
{
    min-width: 8px;
    max-width: 8px;
    min-height: 8px;
    max-height: 8px;
    qproperty-iconSize: 8px 8px;
}

AzQtComponents--DockBarButton.close
{
    titlebar-close-icon: url(:/stylesheet/img/close.svg);
}

AzQtComponents--DockBarButton.maximize
{
    titlebar-maximize-icon: url(:/stylesheet/img/UI20/titlebar-maximize.svg);
}

AzQtComponents--DockBarButton.minimize
{
    titlebar-minimize-icon: url(:/stylesheet/img/UI20/titlebar-minimize.svg);
}

AzQtComponents--TitleBar AzQtComponents--TabBar::tab:first,
AzQtComponents--TitleBar AzQtComponents--TabBar::tab:only
{
    border-left: none;
}
