def build(bld):

    bld.CryEngineSharedLibrary(
        # Settings
        target                  = 'AzToolsFrameworkTests',
        vs_filter               = 'AZ Framework/TestSuites',
        file_list               = 'aztoolsframeworktests.waf_files',
        platforms               = ['win', 'darwin'],
        configurations          = ['profile_test', 'debug_test'],
        use                     = ['AzTest', 'AzCore', 'AzToolsFramework', 'AzQtComponents', 'AzTestShared'],
        uselib                  = ['QT5CORE',
                                   'QT5GUI',
                                   'QT5NETWORK',
                                   'QT5QML',
                                   'QT5WEBKITWIDGETS',
                                   'QT5WEBKIT',
                                   'QT5WIDGETS',
                                   'QT5WINEXTRAS',
                                   'QT5CONCURRENT',
                                   'QT5XML',
                                   'QT5TEST']
    )