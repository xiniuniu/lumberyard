def build(bld):

    bld.CryEngineStaticLibrary(
        # Settings
        target           = 'AzTest',
        vs_filter        = 'AZ Framework',
        file_list        = ['aztest.waf_files'],
        platforms        = ['win',
                            'linux',
                            'darwin',
                            'android',
                           ] + [p3 for p0, p1, p2, p3 in bld.env['RESTRICTED_PLATFORMS']],
        configurations   = ['all'],
        test_only        = True,
        disable_pch      = True,
        use              = ['AzCore',
                            'GMOCK'],
        includes         = ['..'],
        export_includes  = ['..'],

        # Platform Roots
        platform_roots  = [bld.PlatformRoot('Platform', export_includes=True)],
    )
