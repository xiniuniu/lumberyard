def build(bld):
    bld.DefineGem(
        includes          = [ '.',
                              'Include',
                              bld.Path('Code/CryEngine/CryCommon')
                            ],
        win_features      = ['crcfix'],
        use_required_gems = True,

        editor = dict(
            platforms   = ['win', 'darwin'],
            features    = ['qt5'],
            uselib      = [
                           'QT5CORE',
                           'QT5GUI',
                           'QT5WIDGETS',
                           'QT5NETWORK' # this lib depends on EditorLib, which depends on NewsShared, which depends on Qt5Network
                           ],
            defines     = ['FASTNOISE_EDITOR'],
            includes    = ['.', 
                           'Include',
                           bld.Path('Code/Sandbox/Plugins/EditorCommon'),
                           bld.Path('Code/Sandbox/Editor'),
                           bld.Path('Code/Sandbox/Editor/Include'),
                           bld.Path('Code/CryEngine/CryCommon')
                           ],
            use         = ['EditorUI_QT',
                           'EditorCommon',
                           'EditorLib', 
                           'AssetBuilderSDK',
                           'AzToolsFramework', 
                           'AzQtComponents'],
            use_required_gems = True,
        ),
    )
