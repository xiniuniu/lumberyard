{
    "Resources": {
        "PatchS3NotificationsResourceType": {
            "Type": "Custom::ResourceTypes",
            "Properties": {
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "ProjectResourceHandler",
                        "Arn"
                    ]
                },
                "LambdaConfiguration": {
                    "Fn::GetAtt": [
                        "PatchS3NotificationsResourceTypeLambdaConfig",
                        "ComposedLambdaConfiguration"
                    ]
                },
                "LambdaTimeout": 30,
                "Definitions": {
                    "Custom::PatchS3Notifications": {
                        "ArnFormat": "*",
                        "HandlerFunction": {
                            "Function": "Custom_PatchS3Notifications.handler",
                            "PolicyStatement": [
                                {
                                    "Sid": "PutBucketNotificationConfigurationForLambda",
                                    "Effect": "Allow",
                                    "Action": [
                                        "lambda:AddPermission"
                                    ],
                                    "Resource": [
                                        { "Fn::Sub": "arn:aws:lambda:${AWS::Region}:${AWS::AccountId}:function:*" }
                                    ]
                                },
                                {
                                    "Sid": "PutBucketNotificationConfigurationForS3",
                                    "Effect": "Allow",
                                    "Action": [
                                        "s3:PutBucketNotification",
                                        "s3:GetBucketNotification"
                                    ],
                                    "Resource": [
                                        {
                                            "Fn::Join": [
                                                "",
                                                [
                                                    "arn:aws:s3:::",
                                                    { "Fn::GetAtt": [ "Helper", "LowerCaseStackName" ] },
                                                    "-*"
                                                ]
                                            ]
                                        }
                                    ]
                                }
                            ]
                        },
                        "PermissionMetadata": {
                            "RestrictActions": [ ]
                        }
                    },
                    "Custom::SharedConfigurationBucket": {
                        "ArnFormat": "arn:aws:s3:::",
                        "HandlerFunction": {
                            "Function": "Custom_PatchS3Notifications.empty_handler"
                        },
                        "PermissionMetadata": {
                            "DefaultRoleMappings": [
                                {
                                    "AbstractRole": "ServiceLambda",
                                    "Action": [
                                        "s3:GetObject"
                                    ],
                                    "ResourceSuffix": {
                                        "Fn::Join": [
                                            "",
                                            [
                                                { "Ref": "Configuration" },
                                                "/deployment/share",
                                                "/emitted_event_payloads/*"
                                            ]
                                        ]
                                    }
                                }                              
                            ]
                        }
                    },
                    "Custom::GlobalPermissions": {
                        "ArnFormat": "*",
                        "HandlerFunction": {
                            "Function": "Custom_PatchS3Notifications.empty_handler"
                        },
                        "PermissionMetadata": {
                            "DefaultRoleMappings": [                               
                                {
                                    "AbstractRole": "ServiceLambda",
                                    "Action": [
                                        "cloudwatch:PutMetricData"
                                    ],
                                    "ResourceSuffix": ""
                                }
                            ]
                        }
                    }
                }
            }
        },
        "PatchS3NotificationsResourceTypeLambdaConfig": {
            "Properties": {
                "ConfigurationBucket": {
                    "Ref": "Configuration"
                },
                "ConfigurationKey": {
                    "Ref": "ConfigurationKey"
                },
                "FunctionName": "PatchS3NotificationsResourceType",
                "Runtime": "python2.7",
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "ProjectResourceHandler",
                        "Arn"
                    ]
                }
            },
            "Type": "Custom::LambdaConfiguration"
        }
    }
}
