            "Properties": {
                "Action": "lambda:InvokeFunction",
                "FunctionName": {
                    "Fn::GetAtt": [
                        "RecordSetProcessor",
                        "Arn"
                    ]
                },
                "Principal": "events.amazonaws.com",
                "SourceArn": {
                    "Fn::GetAtt": [
                        "RecordSetProcessorSchedulerRule",
                        "Arn"
                    ]
                }
            },
            "Type": "AWS::Lambda::Permission"
