def build(bld):
    bld.DefineGem(
        # General
        disable_pch             = True,
        file_list               = ['presence.waf_files'],
        
        # Testing
        test_all_file_list      = ['presence_tests.waf_files'],

        # Platform Specific
        platform_roots          = [{'root': 'Source/Platform', 'export_includes': False}]
    )
